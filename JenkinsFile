pipeline 
{
    agent {label 'jenkins_node'} 
    stages
    {
    stage ('git')
    {    
        steps 
        {
        git branch: 'main', url: 'https://github.com/Mohamed-Gamal92/eduWeb.git'
        }
    }
    stage ('artifact')
    {
        steps 
        {
        sh 'tar -cf web.tar * '
        archiveArtifacts artifacts: 'web.tar', fingerprint: true
        }
    }
    stage ('deploy') 
    {
        agent {label 'last'}
        steps 
            {
                copyArtifacts filter: 'web.tar', fingerprintArtifacts: true, projectName: 'edu-pipeline' , selector: lastSuccessful(), target: '/var/www/html/'
                sh '''
                hostname
                ip a
                #cd /var/www/html/ && rm -f index.html
                #tar -xvf /var/www/html/web.tar -C /var/www/html/
                '''
        }
}
}
}
