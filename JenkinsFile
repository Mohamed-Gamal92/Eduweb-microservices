pipeline 
{
    agent {label 'jenkins_node'} 
    stages
    {
    stage ('git')
    {    
        steps 
        {
        git branch: 'main', url: 'https://github.com/Mohamed-Gamal92/eduWeb.git'
        }
    }
    stage ('artifact')
    {
        steps 
        {
        sh 'tar -cf web.tar * '
        archiveArtifacts artifacts: 'web.tar', fingerprint: true
        }
    }
    stage ('deploy') 
    {
        agent {label 'last'}
        steps 
            {
                copyArtifacts filter: 'web.tar', fingerprintArtifacts: true, projectName: 'test_eduweb' , selector: lastSuccessful(), target: '/var/www/html/'
                sh 'hostname'
        }
}
}
}
